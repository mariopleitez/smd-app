{
  "expo": {
    "name": "SaveMyDish",
    "slug": "savemydish",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./public/logo.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./public/logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#FFF5E6"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "icon": "./public/logo.png",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "SaveMyDish usa el microfono para dictar recetas y convertirlas en texto."
      }
    },
    "android": {
      "package": "com.savemydish.app",
      "permissions": [
        "RECORD_AUDIO"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./public/logo.png",
        "backgroundColor": "#FFF5E6"
      }
    },
    "web": {
      "favicon": "./public/logo.png"
    }
  }
}
